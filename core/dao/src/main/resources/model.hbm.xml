<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ru.sbrf.nhl.rtf.core.model">

    <class name="Project" table="project">
        <id name="id">
            <generator class="native">
                <param name="sequence">project_id_seq</param>
            </generator>
        </id>
        <property name="name" not-null="true" unique="true"/>
        <property name="description" not-null="true"/>
        <property name="status" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.sbrf.nhl.rtf.core.model.component.ProjectStatus</param>
            </type>
        </property>
        <property name="createDate" not-null="true"/>
        <one-to-one name="template" class="Template" lazy="false" cascade="none"/>
    </class>

    <class name="Template" table="template">
        <id name="id">
            <generator class="native">
                <param name="sequence">template_id_seq</param>
            </generator>
        </id>
        <property name="name" not-null="true" unique="true"/>
        <bag name="fields" table="template_field" lazy="false" cascade="all">
            <key column="template_id"/>
            <!--<list-index column="id"/>-->
            <one-to-many class="TemplateField"/>
        </bag>
    </class>

    <class name="TemplateField" table="template_field">
        <id name="id">
            <generator class="native">
                <param name="sequence">template_field_id_seq</param>
            </generator>
        </id>
        <property name="name" not-null="true"/>
        <property name="type" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.sbrf.nhl.rtf.core.model.component.TemplateFieldType</param>
            </type>
        </property>
        <map name="addParams" table="template_field_param" lazy="false">
            <key column="template_field_id"/>
            <map-key column="key" type="string"/>
            <element column="value" type="string"/>
        </map>
    </class>

</hibernate-mapping>